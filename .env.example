# Legacy single-identity pattern (still supported for backwards compatibility)
export MASTODON_BASE_URL=https://mastodon.social
export MASTODON_CLIENT_ID=your_client_id_here
export MASTODON_CLIENT_SECRET=your_client_secret_here
export MASTODON_ACCESS_TOKEN=your_access_token_here
# New multi-identity pattern
# Define as many identities as you need with the pattern:
# MASTODON_ID_{NAME}_{FIELD}

# Example: Main identity
export MASTODON_ID_MAIN_BASE_URL=https://mastodon.social
export MASTODON_ID_MAIN_CLIENT_ID=your_main_client_id
export MASTODON_ID_MAIN_CLIENT_SECRET=your_main_client_secret
export MASTODON_ID_MAIN_ACCESS_TOKEN=your_main_access_token

# Example: Art account on another instance
export MASTODON_ID_ART_BASE_URL=https://mastodon.art
export MASTODON_ID_ART_CLIENT_ID=your_art_client_id
export MASTODON_ID_ART_CLIENT_SECRET=your_art_client_secret
export MASTODON_ID_ART_ACCESS_TOKEN=your_art_access_token

# Example: Tech account
export MASTODON_ID_TECH_BASE_URL=https://fosstodon.org
export MASTODON_ID_TECH_CLIENT_ID=your_tech_client_id
export MASTODON_ID_TECH_CLIENT_SECRET=your_tech_client_secret
export MASTODON_ID_TECH_ACCESS_TOKEN=your_tech_access_token

# App configuration
export APP_BASE_URL=http://localhost:8000
export FRONTEND_URL=http://localhost:4200
export SESSION_SECRET=change-me-to-random-string
export DB_URL=sqlite+aiosqlite:///./app.db
